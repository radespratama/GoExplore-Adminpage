<%- include('../../parts/header.ejs') %>

    <%- include('../../parts/sidebar.ejs') %>

    <%- include('../../parts/navbar.ejs') %>

<div class="lime-container">
    <div class="lime-body">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-title">
                        <nav aria-label="breadcrumb">
                          <ol class="breadcrumb breadcrumb-separator-1">
                            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Items</li>
                          </ol>
                        </nav>
                        <h3>Item Travels</h3>
                        <p class="page-desc">Items tables for list all travel and tourism in Indonesia and others</p>
                    </div>

                    <%- include('../../parts/notif.ejs') %>

                </div>
            </div>
            <div class="row">
                <div class="col-xl">
                    <div class="card">
                        <div class="card-body">
                            
                            <% if(action == 'view') { %>
                                
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-item" role="tab" aria-controls="show-item" aria-selected="true">Show Items</a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#add-items" role="tab" aria-controls="profile" aria-selected="false">Add Items</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
                                        <%- include('./tables_items.ejs') %>
                                    </div>
                                    <div class="tab-pane fade" id="add-items" role="tabpanel" aria-labelledby="profile-tab">
                                        <%- include('./add_items_form.ejs') %>
                                    </div>
                                </div>

                           <% } else if(action == 'show_image') { %>

                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-item" role="tab" aria-controls="show-item" aria-selected="true">Show Items</a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#add-items" role="tab" aria-controls="profile" aria-selected="false">Add Items</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
                                        <%- include('./tables_items.ejs') %>
                                    </div>
                                    <div class="tab-pane fade" id="add-items" role="tabpanel" aria-labelledby="profile-tab">
                                        <%- include('./add_items_form.ejs') %>
                                    </div>
                                </div>
                           <% } %>
                            

                        </div>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>
<%- include('../../parts/script.ejs') %>

